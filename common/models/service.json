{
  "name": "Service",
  "plural": "services",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "port": {
      "type": "number"
    },
    "description": {
      "type": "string"
    },
    "toRestart": {
      "type": "boolean"
    }
  },
  "validations": [],
  "relations": {
    "server": {
      "type": "belongsTo",
      "model": "Server",
      "foreignKey": ""
    },
    "servicetype": {
      "type": "belongsTo",
      "model": "ServiceType",
      "foreignKey": "serviceTypeId"
    },
    "status": {
      "type": "belongsTo",
      "model": "Status",
      "foreignKey": ""
    },
    "instance": {
      "type": "hasMany",
      "model": "Instance",
      "foreignKey": "serviceId",
      "through": "ServiceInstance"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
